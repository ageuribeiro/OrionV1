<Window x:Class="Orion.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="600" Height="300"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10" Background="White" Padding="0">
        <Grid>
            <Image Source="/Assets/splash_screen_landscape_cropped_450x300.png"  
                   VerticalAlignment="Top"
                   Stretch="UniformToFill"
                   Opacity="0.8"
                   Panel.ZIndex="0"/>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Panel.ZIndex="1">
                <TextBlock Text="Loading Application..." 
                           FontSize="20" FontWeight="Bold"
                           Foreground="#20E0D5"
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,0"/>
                <ProgressBar x:Name="progressBar"
                             Width="500"
                             Margin="0,15,0,30"
                             Height="2.5" 
                             Minimum="0" 
                             Maximum="100"
                             Foreground="#20E0D5"
                             Background="#FFDCE6F0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
