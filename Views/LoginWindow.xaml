<Window x:Class="Orion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orion"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="\Assets\1-974d793f.ico"
        Title="Acesso ao Sistema - Login" Width="400" Height="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Enter your e-mail: " FontWeight="Bold" Margin="0,10,0,5" FontSize="18"/>
            <TextBox x:Name="txtEmailLogin" Height="30" Width="300" 
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     Padding="5,0,5,0" TextAlignment="Center" FontWeight="Bold"/>

            <TextBlock Text="Enter with password: " FontWeight="Bold" Margin="0,10,0,5" FontSize="18"/>
            <PasswordBox x:Name="txtPassword" Height="30" Width="300" 
                     VerticalContentAlignment="Center" 
                     HorizontalContentAlignment="Center"
                     FontWeight="Bold"
                     Padding="5,0,5,0" />
            <Button x:Name="btnOpenSystem" Height="45" Width="300" 
                    Content="Acessar Sistema" Foreground="Black" FontSize="18"
                    FontWeight="Bold" Margin="0,15" Background="LightGray" Click="Login_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
